# Shuffle files on mpv
play (){
    mpv --shuffle *
    }


# Check system total boot time
st () {
systemd-analyze | awk '{print $NF}'
}

# Remove unused/old docker containers
contrem (){
        cont_ids=`docker ps -a | awk '{print $1}' | grep -o "[a-f0-9]\{12\}"`

for i in $cont_ids; do
   echo ""
   echo -e "Removing old docker containers...."
   echo ""
   docker rm $i;
done

if [[ "$?" -eq 0 ]]; then
    echo ""
    echo "*** All containers removed ***"
      else
        echo "Error/No containers to delete..."
fi
}

imgrem (){
old_image_ids=`docker  images  | grep none | awk '{print $3}'`

for i in $old_image_ids; do
    echo ""
    echo -e "Removing old unused docker images in none repo...."
    echo ""
    docker rmi $i;
done

if [[ "$?" -eq 0 ]]; then
    echo ""
    echo "*** All docker images in none repo removed ***"
        else
     echo "Error,No docker images deleted..."
 fi
}

