# Make a temporary directory and enter it
tmpd() {
        if [ $# -eq 0 ]; then
            tmpdir=`mktemp -d` && cd $dir
        else
            dir=`mktemp -d -t $1.XXXXXXXXXX` && cd $tmpdir
        fi
    }
